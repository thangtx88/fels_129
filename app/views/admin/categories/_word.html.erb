<div class="col-md-6 panel panel-default">
  <h3>
    <%= link_to t("admin.words.new"),
      admin_category_path(@category) %>
  </h3>
  <%= form_for [:admin, @word] do |f| %>
    <%= render "shared/error_messages", object: @word %>
    <p><%= f.label :content, t("admin.words.content") %></p>
    <p><%= f.text_field :content, class: "form-control" %></p>
    <%= f.hidden_field :category_id, value: @category.id %>
    <%= f.fields_for :answers do |builder| %>
      <%= render "answer_fields", f: builder %>
    <% end %>
    <p><%= link_to_add_fields t("admin.words.add_answer"), f, :answers %></p>
    <%= f.submit t("admin.words.submit"), class: "btn btn-default
      col-md-4 col-md-offset-4" %>
  <% end %>
</div>
