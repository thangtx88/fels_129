<% provide :title, t("admin.category.edit") %>
<h1><%= t "admin.category.edit" %></h1>

<div class = "row">
  <div class= "col-md-6 col-md-offset-3">
    <%= form_for [:admin, @category] do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= f.label :content, t("admin.category.content") %>
      <%= f.text_field :content, class: "form-control" %>

      <%= f.submit t("admin.category.update"), class: "btn btn-default col-md-3" %>
    <% end %>
  </div>
</div>
