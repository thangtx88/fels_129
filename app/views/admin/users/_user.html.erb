<li class="list-group-item">
  <h4>
    <%= link_to avatar_for(user, Settings.avatar.height,
      Settings.avatar.width), user %>
    <%= link_to user.name, user %>
    <% if current_user.admin? %>
      <% if can? :edit, User %>
        | <%= link_to t("admin.edit"), edit_user_registration_path(user) %>
      <% end %>
      <% if can? :delete, User %>
        | <%= link_to t("admin.delete"), admin_user_path(user),
          method: :delete, data: {confirm: t("views.user.confirm")} %>
      <% end %>
    <% end %>
  </h4>
</li>
