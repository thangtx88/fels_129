<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("basetitle"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav">
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li>
              <%= link_to t("views.layouts.categories"), admin_categories_path %>
            </li>
          <% else %>
            <li><%= link_to t("views.layouts.categories"), categories_path %></li>
            <li><%= link_to t("views.layouts.words"), words_path %></li>
          <% end %>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("app"), root_path %></li>
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li><%= link_to t("views.layouts.users"), admin_users_path %></li>
          <% else %>
            <li><%= link_to t("views.layouts.users"), users_path %></li>
          <% end %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t("account")%> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("profile"), current_user %></li>
            <li>
              <%= link_to t("user.setting"), edit_user_path(current_user) %>
            </li>
            <li class="divider"></li>
            <li><%= link_to t("logout"), logout_path, method: "delete" %></li>
          </ul>
        </li>
        <% else %>
          <li><%= link_to t("layouts.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
